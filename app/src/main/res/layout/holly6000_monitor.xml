<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holly6000_monitor_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/holly6000_monitor_outer_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:src="@drawable/holly6000_monitor_outer_frame"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintDimensionRatio="H,7:6"/>

    <ImageView
        android:id="@+id/holly6000_monitor_inner_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:src="@drawable/holly6000_monitor_inner_frame"

        android:layout_margin="10dp"

        app:layout_constraintTop_toTopOf="@id/holly6000_monitor_outer_frame"
        app:layout_constraintStart_toStartOf="@id/holly6000_monitor_outer_frame"
        app:layout_constraintEnd_toEndOf="@id/holly6000_monitor_outer_frame"

        app:layout_constraintDimensionRatio="H,4:3"/>

    <ImageView
        android:id="@+id/holly6000_monitor_screen_center"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:src="@drawable/holly6000_monitor_screen_center"

        android:layout_margin="30dp"

        app:layout_constraintTop_toTopOf="@id/holly6000_monitor_inner_frame"
        app:layout_constraintBottom_toBottomOf="@id/holly6000_monitor_inner_frame"
        app:layout_constraintStart_toStartOf="@id/holly6000_monitor_inner_frame"
        app:layout_constraintEnd_toEndOf="@id/holly6000_monitor_inner_frame"/>

    <ImageView
        android:id="@+id/holly6000_monitor_screen_top"
        android:layout_width="0dp"
        android:layout_height="20dp"

        android:src="@drawable/holly6000_monitor_screen_border"

        app:layout_constraintTop_toTopOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintBottom_toTopOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintStart_toStartOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintEnd_toEndOf="@id/holly6000_monitor_screen_center"
       />

    <ImageView
        android:id="@+id/holly6000_monitor_screen_bottom"
        android:layout_width="0dp"
        android:layout_height="20dp"

        android:src="@drawable/holly6000_monitor_screen_border"

        app:layout_constraintTop_toBottomOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintBottom_toBottomOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintStart_toStartOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintEnd_toEndOf="@id/holly6000_monitor_screen_center"
        />

    <ImageView
        android:id="@+id/holly6000_monitor_screen_start"
        android:layout_width="20dp"
        android:layout_height="0dp"

        android:src="@drawable/holly6000_monitor_screen_border"

        app:layout_constraintTop_toTopOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintBottom_toBottomOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintStart_toStartOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintEnd_toStartOf="@id/holly6000_monitor_screen_center"
        />

    <ImageView
        android:id="@+id/holly6000_monitor_screen_end"
        android:layout_width="20dp"
        android:layout_height="0dp"

        android:src="@drawable/holly6000_monitor_screen_border"

        app:layout_constraintTop_toTopOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintBottom_toBottomOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintStart_toEndOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintEnd_toEndOf="@id/holly6000_monitor_screen_center"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/holly6000_monitor_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:padding="5dp"

        app:layout_constraintTop_toTopOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintBottom_toBottomOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintStart_toStartOf="@id/holly6000_monitor_screen_center"
        app:layout_constraintEnd_toEndOf="@id/holly6000_monitor_screen_center"/>

    <TextView
        android:id="@+id/holly6000_monitor_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/holly6000_monitor_caption"
        android:textSize="24sp"
        android:textColor="@color/holly6000_monitor_caption_color"
        android:fontFamily="@font/amperzand"

        app:layout_constraintTop_toBottomOf="@id/holly6000_monitor_inner_frame"
        app:layout_constraintBottom_toBottomOf="@id/holly6000_monitor_outer_frame"
        app:layout_constraintStart_toStartOf="@id/holly6000_monitor_outer_frame"
        app:layout_constraintEnd_toEndOf="@id/holly6000_monitor_outer_frame" />

    <ImageView
        android:id="@+id/holly6000_monitor_knoble1"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:src="@drawable/holly6000_monitor_knoble"

        android:layout_marginVertical="10dp"
        android:layout_marginStart="30dp"

        app:layout_constraintTop_toBottomOf="@id/holly6000_monitor_inner_frame"
        app:layout_constraintBottom_toBottomOf="@id/holly6000_monitor_outer_frame"
        app:layout_constraintStart_toStartOf="@id/holly6000_monitor_outer_frame"

        app:layout_constraintDimensionRatio="H,1:1"/>

    <ImageView
        android:id="@+id/holly6000_monitor_knoble2"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:src="@drawable/holly6000_monitor_knoble"

        android:layout_margin="10dp"

        app:layout_constraintTop_toBottomOf="@id/holly6000_monitor_inner_frame"
        app:layout_constraintBottom_toBottomOf="@id/holly6000_monitor_outer_frame"
        app:layout_constraintStart_toEndOf="@id/holly6000_monitor_knoble1"

        app:layout_constraintDimensionRatio="H,1:1"/>

    <TextView
        android:id="@+id/holly6000_monitor_digit_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=" 00 "
        android:textSize="36sp"
        android:textColor="#42772F"
        android:fontFamily="@font/digital_font"

        android:background="@color/black"

        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/holly6000_monitor_inner_frame"
        app:layout_constraintBottom_toBottomOf="@id/holly6000_monitor_outer_frame"
        app:layout_constraintEnd_toEndOf="@id/holly6000_monitor_outer_frame" />


</androidx.constraintlayout.widget.ConstraintLayout>